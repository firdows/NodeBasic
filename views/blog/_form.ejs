<% if(locals.errors){ %>
<div class="alert alert-danger">
    <b>พบปัญหา</b>
    <ul>
        <% Object.values(errors).forEach(function(error){ %>
        <li><%=error.msg%></li>
        <% }) %>
    </ul>
</div>
<% }  %>


